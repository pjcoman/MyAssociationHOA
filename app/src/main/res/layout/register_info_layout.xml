<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070707">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/buttonSave"
        android:layout_gravity="right" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:background="@drawable/info_background"
        android:padding="40dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:ems="10"
                    android:id="@+id/editTextLastName"
                    android:hint="@string/last_name"
                    android:layout_weight="1"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords|textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextFirstName"
                    android:hint="@string/first_name"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="14sp" />

            </LinearLayout>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:inputType="textCapWords"
                android:ems="10"
                android:id="@+id/editTextMiddleName"
                android:hint="@string/middle_name"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/summerAddressLabel"
                android:layout_gravity="center_horizontal"
                android:text="@string/summer_address" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextAddress1"
                android:hint="@string/address_1"
                android:inputType="textCapWords"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextAddress2"
                android:hint="@string/address_2"
                android:inputType="textCapWords"
                android:textSize="14sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editTextCity"
                    android:hint="@string/city"
                    android:layout_weight="1"
                    android:inputType="textCapWords"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textCapCharacters"
                    android:ems="10"
                    android:id="@+id/editTextState"
                    android:hint="@string/state"
                    android:layout_weight="1"
                    android:capitalize="characters"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number|textPostalAddress"
                android:ems="10"
                android:id="@+id/editTextZip"
                android:hint="@string/zip2"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/editTextPhone"
                android:hint="@string/home_phone"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/editTextMobilePhone"
                android:hint="@string/mobile_phone"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextEmail"
                android:hint="@string/email_address"
                android:inputType="textWebEmailAddress|textEmailAddress"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/winterAddressLabel"
                android:layout_gravity="center_horizontal"
                android:text="@string/winter_address" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextNameW"
                android:hint="business name"
                android:inputType="textCapWords"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:visibility="gone" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextAddress1W"
                android:hint="@string/address_1"
                android:inputType="textCapWords"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextAddress2W"
                android:hint="@string/address_2"
                android:inputType="textCapWords"
                android:textSize="14sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editTextCityW"
                    android:hint="@string/city"
                    android:layout_weight="1"
                    android:inputType="textCapWords"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textCapCharacters"
                    android:ems="10"
                    android:id="@+id/editTextStateW"
                    android:hint="@string/state"
                    android:layout_weight="1"
                    android:capitalize="characters"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number|textPostalAddress"
                android:ems="10"
                android:id="@+id/editTextZipW"
                android:hint="@string/zip2"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/editTextPhoneW"
                android:hint="@string/home_phone"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextemailW"
                android:hint="@string/email_address"
                android:inputType="textWebEmailAddress|textEmailAddress"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:text="Emergency Contact" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextEmergencyContact"
                android:hint="@string/emergency_contact_name"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:inputType="textCapWords"
                android:capitalize="words"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextEmergencyPhone"
                android:hint="@string/emergency_contact_number"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:inputType="phone"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>