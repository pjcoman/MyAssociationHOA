<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="9"
    android:background="@drawable/info_background_noborder"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/push_the_message"
        android:id="@+id/textViewSendOptions"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#050505"
        android:layout_weight=".5"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewCount"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="#050505"
        android:layout_weight=".5"
        android:editable="false" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|textCapSentences"
        android:ems="10"
        android:id="@+id/editTextPushMessage"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:gravity="start|top"
        android:padding="20dp"
        android:layout_weight="6" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_message"
            android:id="@+id/buttonSendMessage"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/button_rounded_corners_white_white_bg"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#325cd8" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/selected_group"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="#325cd8"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/everyone"
            android:id="@+id/buttonGroups"
            android:textSize="12sp"
            android:background="@drawable/button_rounded_corners_white_white_bg"
            android:textColor="#0a7122"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>


</LinearLayout>