<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context="comapps.com.myassociationhoa.WeatherActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="false"
    android:clickable="false"
    android:id="@+id/content_main_providers"
    android:orientation="vertical"
    android:background="@drawable/blonde"
    android:padding="5dp">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back to Providers"
        android:id="@+id/backToProviders"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewProviders" />

</LinearLayout>