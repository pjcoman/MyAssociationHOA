<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".maintenance.MaintenanceActivityWithFragment"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:focusableInTouchMode="false"
    android:clickable="false"
    android:id="@+id/content_main_maintenance_row"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="10"
    android:visibility="visible"
    tools:background="@drawable/blonde_engraved"
    android:gravity="center_vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewMaintCat"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewMaintNumber"
        android:textSize="16sp"
        android:text="@string/email_address"
        android:textColor="#577618"
        android:textAlignment="center" />
</LinearLayout>