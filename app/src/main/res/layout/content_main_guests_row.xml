<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/whiteengravedlandscape"
    android:padding="20dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guest"
            android:id="@+id/textView10"
            android:textColor="#0a0a0a"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:layout_gravity="left" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/autoMake"
                android:layout_gravity="left"
                android:text="@string/guest_name"
                android:textColor="#6b050c"
                android:textSize="16sp"
                android:capitalize="words"
                android:textIsSelectable="false"
                android:gravity="center"
                android:autoText="true"
                android:inputType="textNoSuggestions"
                android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/typestring"
            android:id="@+id/textView11"
            android:textColor="#0a0a0a"
            android:textSize="14sp"
            android:paddingRight="2dp"
            android:paddingLeft="10dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/guestType"
                android:layout_gravity="center_horizontal"
                android:text="@string/guest_type"
                android:textColor="#a58b5d"
                android:textSize="14sp"
                android:capitalize="words"
            android:textIsSelectable="false"
            android:autoText="true"
                android:inputType="textNoSuggestions"
            android:layout_toRightOf="@+id/textView11"
            android:paddingLeft="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact"
            android:id="@+id/textView12"
            android:textColor="#0a0a0a"
            android:textSize="14sp"
            android:paddingRight="2dp"
            android:layout_toLeftOf="@+id/autoModel" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/autoModel"
            android:text="@string/guest_contact"
                android:textColor="#a58b5d"
                android:textSize="14sp"
                android:capitalize="words"
            android:textIsSelectable="false"
            android:autoText="true"
                android:inputType="textNoSuggestions"
            android:layout_alignParentEnd="true"
            android:paddingLeft="4dp"
            android:paddingRight="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datesLayout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/autoColor"
                android:layout_gravity="center_horizontal"
                android:text="@string/start_date"
                android:textColor="#a58b5d"
                android:textSize="18sp"
                android:capitalize="words"
            android:textIsSelectable="false"
            android:gravity="center"
                android:autoText="true"
                android:inputType="textNoSuggestions|date"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/to"
            android:id="@+id/textView15"
            android:textColor="#a58b5d"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/petWeight"
                android:layout_gravity="center_horizontal"
                android:text="@string/end_date"
                android:textColor="#a58b5d"
                android:textSize="18sp"
                android:capitalize="words"
            android:textIsSelectable="false"
                android:gravity="center"
                android:autoText="true"
                android:inputType="textNoSuggestions|date"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:weightSum="8"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:text="@string/days"
            android:textColor="#050505"
            android:textSize="12sp"
            android:capitalize="words"
            android:textIsSelectable="false"
            android:autoText="true"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:gravity="center" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:id="@+id/autoPlate"
            android:text="@string/mon"
                android:textColor="#a58b5d"
                android:textSize="12sp"
                android:capitalize="words"
                android:textIsSelectable="false"
            android:autoText="true"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:id="@+id/guestTuesdayAccess"
            android:text="@string/tue"
                android:textColor="#a58b5d"
                android:textSize="12sp"
                android:capitalize="words"
                android:textIsSelectable="false"
                android:gravity="center"
                android:autoText="true"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:id="@+id/guestWednesdayAccess"
            android:text="@string/wed"
            android:textColor="#a58b5d"
            android:textSize="12sp"
            android:capitalize="words"
            android:textIsSelectable="false"
            android:gravity="center"
            android:autoText="true"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:id="@+id/guestThursdayAccess"
            android:text="@string/thu"
            android:textColor="#a58b5d"
            android:textSize="12sp"
            android:capitalize="words"
            android:textIsSelectable="false"
            android:gravity="center"
            android:autoText="true"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:id="@+id/guestFridayAccess"
            android:text="@string/fri"
            android:textColor="#a58b5d"
            android:textSize="12sp"
            android:capitalize="words"
            android:textIsSelectable="false"
            android:gravity="center"
            android:autoText="true"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:id="@+id/guestSaturdayAccess"
            android:text="@string/satstring"
            android:textColor="#a58b5d"
            android:textSize="12sp"
            android:capitalize="words"
            android:textIsSelectable="false"
            android:gravity="center"
            android:autoText="true"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:id="@+id/guestSundayAccess"
            android:text="@string/sun"
            android:textColor="#a58b5d"
            android:textSize="12sp"
            android:capitalize="words"
            android:textIsSelectable="false"
            android:gravity="center"
            android:autoText="true"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView14"
            android:layout_gravity="center_horizontal"
            android:text="@string/owner"
            android:textColor="#0b0a0a"
            android:textSize="16sp"
            android:capitalize="words"
            android:textIsSelectable="false"
            android:gravity="center"
            android:autoText="true"
            android:inputType="textNoSuggestions"
            android:textStyle="bold"
            android:paddingRight="5dp"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/guestOwnerName"
            android:layout_gravity="center_horizontal"
            android:text="@string/pet_owner"
            android:textColor="#6b050c"
            android:textSize="16sp"
            android:capitalize="words"
            android:textIsSelectable="false"
            android:gravity="center"
            android:autoText="true"
            android:inputType="textNoSuggestions"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:padding="5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/record_access"
            android:id="@+id/guestRecordAccess"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:layout_weight="2"
            android:shadowColor="#f6e142"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="2" />
    </LinearLayout>


</LinearLayout>