<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8"
    android:orientation="vertical"
    android:background="#050505">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/buttonSave"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".5"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_rounded_corners_black_gray_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7.5"
        android:background="@drawable/blonde_engraved"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="40dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextProviderName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#fcf8f8"
                    android:gravity="center_vertical|center_horizontal|left"
                    android:hint="@string/name"
                    android:inputType="textCapWords"
                    android:paddingLeft="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#060606"
                    android:textColorHint="#928f8f"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextProviderAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#fcf8f8"
                    android:gravity="center_vertical|left"
                    android:hint="@string/address1"
                    android:inputType="textCapWords"
                    android:paddingLeft="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#060606"
                    android:textColorHint="#928f8f"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextProviderAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#fcf8f8"
                    android:gravity="center_vertical|left"
                    android:hint="@string/address_2"
                    android:inputType="textCapWords"
                    android:paddingLeft="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#060606"
                    android:textColorHint="#928f8f"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:weightSum="4">

                    <EditText
                        android:id="@+id/editTextProviderCity"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"

                        android:layout_weight="2"
                        android:background="#fcf8f8"
                        android:gravity="center_vertical|left"
                        android:hint="@string/city"
                        android:inputType="textCapWords"
                        android:paddingLeft="20dp"
                        android:textColor="#060606"
                        android:textColorHint="#928f8f"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextProviderState"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:background="#fcf8f8"
                        android:gravity="center"
                        android:hint="@string/st"
                        android:inputType="textCapCharacters"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#060606"
                        android:textColorHint="#928f8f"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextProviderZip"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:background="#fcf8f8"
                        android:gravity="center"
                        android:hint="@string/zipcaps"
                        android:inputType="number"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#060606"
                        android:textColorHint="#928f8f"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <EditText
                    android:id="@+id/editTextProviderPhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#fcf8f8"
                    android:gravity="center_vertical|left"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:paddingLeft="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#060606"
                    android:textColorHint="#928f8f"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextProviderNotes"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:background="#fcf8f8"
                    android:gravity="left"
                    android:hint="@string/notes"
                    android:inputType="textCapSentences"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#060606"
                    android:textColorHint="#928f8f"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>