<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info_background_noframe"
    android:orientation="vertical"
    android:padding="18dp"
    android:weightSum="9"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="comapps.com.myassociationhoa.contact.ContactActivity">


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:padding="2dp"
        android:weightSum="3">

        <Button
            android:id="@+id/button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_corners_white"
            android:capitalize="characters"
            android:onClick="button1Dial"
            android:padding="4dp"
            android:shadowColor="#f8f4f4"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="#885906"
            android:textSize="@dimen/labels_text_size"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_corners_white"
            android:onClick="button2Dial"
            android:padding="4dp"
            android:shadowColor="#f8f4f4"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="#885906"
            android:textSize="@dimen/labels_text_size"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/button3"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_corners_white"
            android:onClick="button3Dial"
            android:padding="4dp"
            android:shadowColor="#f8f4f4"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="#885906"
            android:textSize="@dimen/labels_text_size"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dp"
        android:weightSum="3">

        <Button
            android:id="@+id/button4"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_corners_white"
            android:onClick="button4Dial"
            android:padding="4dp"
            android:shadowColor="#f8f4f4"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="#885906"
            android:textSize="@dimen/labels_text_size"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/button5"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_corners_white"
            android:onClick="button5Dial"
            android:padding="4dp"
            android:shadowColor="#f8f4f4"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="#885906"
            android:textSize="@dimen/labels_text_size"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:padding="2dp"
        android:weightSum="3">

        <Button
            android:id="@+id/button6"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_corners_white"

            android:onClick="button6Dial"
            android:padding="4dp"
            android:shadowColor="#f8f4f4"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="#885906"
            android:textSize="@dimen/labels_text_size"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/button7"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_corners_white"
            android:onClick="button7Dial"
            android:padding="4dp"
            android:shadowColor="#f8f4f4"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="#885906"
            android:textSize="@dimen/labels_text_size"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/button8"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_corners_white"
            android:onClick="button8Dial"
            android:padding="4dp"
            android:shadowColor="#f8f4f4"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="#885906"
            android:textSize="@dimen/labels_text_size"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="3"
        android:background="@drawable/info_background_noframe"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/textViewAssociationName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/my_association_address"
            android:textAlignment="center"
            android:textColor="#764904"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewAssociationName2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/my_association_address"
            android:textAlignment="center"
            android:textColor="#764904"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewAssociationName3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/my_association_address"
            android:textAlignment="center"
            android:textColor="#764904"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>
