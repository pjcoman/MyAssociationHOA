<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/info_background_noframe">



            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="20dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/lastNameTextView"
                    android:textSize="18sp"
                    android:gravity="center_vertical|left"
                    android:text="@string/lastname"
                    android:textStyle="bold"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/firstNameTextView"
                    android:textSize="18sp"
                    android:gravity="center_vertical|left"
                    android:text="@string/firstname"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/lastNameTextView"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/middleNameTextView"
                    android:textSize="18sp"
                    android:gravity="center_vertical|left"
                    android:text="@string/firstname"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/firstNameTextView"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address1TextView"
                android:gravity="center_vertical|left"
                android:textSize="14sp"
                android:layout_below="@+id/lastNameTextView"
                android:textColor="#090909"
                android:text="@string/address"
                android:paddingLeft="20dp" />
            </RelativeLayout>








</LinearLayout>