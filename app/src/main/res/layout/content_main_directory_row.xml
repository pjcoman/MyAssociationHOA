<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    android:background="@drawable/button_rounded_corners_black"
    android:orientation="horizontal"
    android:padding="20dp">

    <TextView
        android:id="@+id/lastNameTextView"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/lastname"
        android:textColor="#ad1010"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/firstNameTextView"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lastNameTextView"
        android:gravity="center_vertical|left"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/firstname"
        android:textColor="#ad1010"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/middleNameTextView"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/firstNameTextView"
        android:gravity="center_vertical|left"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/middle"
        android:textColor="#ad1010"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/address1TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastNameTextView"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/address"
        android:textColor="#090909"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/activateDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address1TextView"
        android:paddingLeft="16dp"
        android:text="@string/activate_date"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/memberNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/address1TextView"
        android:paddingRight="16dp"
        android:text="@string/member_number"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/deleteDirectoryItem"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/memberNumber"
        android:layout_margin="10dp"
        android:background="@drawable/button_rounded_corners_white_red_bg"
        android:gravity="center"
        android:shadowColor="#f6e142"

        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:text="@string/x"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold" />
</RelativeLayout>


