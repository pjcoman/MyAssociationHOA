<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".maintenance.MaintenanceActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="false"
    android:clickable="false"
    android:id="@+id/content_main_maintenance"
    android:orientation="vertical"
    android:background="@drawable/blonde"

    >


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/listViewMaintenanceCats"
        android:background="@drawable/blonde"
        android:visibility="visible" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="comapps.com.myassociationhoa.maintenance.MaintenanceFragment"
        android:id="@+id/mbActivityFragment"
        tools:layout="@layout/content_main_maintenance_row" />


</LinearLayout>