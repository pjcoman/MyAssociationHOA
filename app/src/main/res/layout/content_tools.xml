<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="comapps.com.myassociationhoa.ToolsActivity"
    tools:showIn="@layout/activity_tools"
    android:orientation="vertical"
    android:weightSum="8"
    android:id="@+id/content_tools"
    android:background="@drawable/info_background_noborder"
    android:padding="20dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="3"
        android:id="@+id/ll1">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb1"
            android:id="@+id/button"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:lines="3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb2"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:lines="3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb3"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:lines="3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="3"
        android:id="@+id/ll2">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb4"
            android:id="@+id/button4"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:lines="3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb5"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:lines="3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb6"
            android:id="@+id/button6"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:lines="3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="3"
        android:id="@+id/ll3">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb7"
            android:id="@+id/button7"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"

            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:lines="3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb8"
            android:id="@+id/button8"
            android:lines="3"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:padding="0dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb9"
            android:id="@+id/button9"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:lines="3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="3"
        android:id="@+id/ll4">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb10"
            android:id="@+id/button10"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:lines="3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb11"
            android:id="@+id/button11"
            android:layout_weight="1"
            android:textSize="10sp"
            android:minLines="2"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:lines="3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb12"
            android:id="@+id/button12"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:lines="3" />
    </LinearLayout>

</LinearLayout>
