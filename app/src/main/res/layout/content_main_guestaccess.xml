<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".maintenance.MaintenanceActivityWithFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="false"
    android:clickable="false"
    android:id="@+id/content_main_guestaccess"
    android:orientation="vertical"
    android:background="@drawable/info_background_noborder"
    android:padding="20dp"
    android:weightSum="6">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/build_text_file_and_email"
        android:id="@+id/textView7"
        android:textSize="18sp"
        android:textColor="#703e07"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/process"
        android:id="@+id/buttonText"
        android:background="@drawable/button_rounded_corners_black_gray_bg"
        android:textSize="18sp"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/build_html_file_and_email"
        android:id="@+id/textView8"
        android:textSize="18sp"
        android:textColor="#703e07"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/process"
        android:id="@+id/buttonHtml"
        android:background="@drawable/button_rounded_corners_black_gray_bg"
        android:textSize="18sp"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_guest_access_file"
        android:id="@+id/textView16"
        android:textSize="18sp"
        android:textColor="#703e07"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/process"
        android:id="@+id/buttonClear"
        android:background="@drawable/button_rounded_corners_black_gray_bg"
        android:textSize="18sp"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

</LinearLayout>