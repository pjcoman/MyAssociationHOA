<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:clickable="false"
              android:orientation="horizontal"
              android:weightSum="2"
              android:baselineAligned="false"
              android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/petNameText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="name"
          />

        <TextView
            android:id="@+id/petTypeText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="type"
            android:textSize="16sp"
            android:textStyle="bold"
           />

        <TextView
            android:id="@+id/petBreedText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="breed"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
           />

        <TextView
            android:id="@+id/petColorText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="color"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
          />

        <TextView
            android:id="@+id/petWeightText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="weight"
            android:gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/petMiscText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="misc"
            android:gravity="center"
            android:textStyle="bold"
            />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center_vertical">

        <Button android:id="@+id/delete" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Delete"
                android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>