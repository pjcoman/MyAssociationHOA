<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="comapps.com.myassociationhoa.ToolsActivity"
    tools:showIn="@layout/activity_tools"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@drawable/info_background_noborder"
    android:padding="6dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:id="@+id/ll1"
        android:padding="5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb1"
            android:id="@+id/button"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="2dp"
            android:padding="6dp"
            android:lines="3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/load_documents"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="2dp"
            android:padding="6dp"
            android:lines="3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb3"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="2dp"
            android:padding="6dp"
            android:lines="3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:id="@+id/ll2"
        android:padding="5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb4"
            android:id="@+id/button4"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="2dp"
            android:padding="6dp"
            android:lines="3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb5"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="2dp"
            android:padding="6dp"
            android:lines="3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/build_txt_directory_file"
            android:id="@+id/button6"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="2dp"
            android:padding="6dp"
            android:lines="3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:id="@+id/ll3"
        android:padding="5dp"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb7"
            android:id="@+id/button7"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"

            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:lines="3"
            android:layout_margin="2dp" />


        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight=".2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb10"
            android:id="@+id/button8"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:lines="3"
            android:layout_margin="2dp" />



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:padding="5dp"
        android:gravity="center_horizontal">



        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb11"
            android:id="@+id/button9"
            android:layout_weight="1"
            android:textSize="10sp"
            android:minLines="2"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:lines="3"
            android:layout_margin="2dp" />

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight=".2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/toolslayoutb12"
            android:id="@+id/button10"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_rounded_corners_black_gray_bg"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="visible"
            android:lines="3"
            android:layout_margin="2dp" />

    </LinearLayout>
</LinearLayout>
